<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    android:layout_height="wrap_content"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Ordering System"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#FF9800"/>


    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza @ rs. 100"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="25dp"/>

    <CheckBox
        android:id="@+id/chk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burger @ rs. 70"
        android:layout_below="@+id/chk1"/>

    <CheckBox
        android:id="@+id/chk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee @ rs. 120"
        android:layout_below="@+id/chk2"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER"
        android:layout_centerInParent="true"
        android:layout_below="@+id/chk3"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="50sp"
        android:layout_height="50dp"
        android:src="@drawable/sp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share it"
        android:layout_below="@id/btn1"
        android:layout_centerInParent="true"
        android:layout_marginTop="30sp"
        />



</RelativeLayout>