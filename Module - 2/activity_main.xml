<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBDD59"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--Please Fill The Form--"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx"
        android:textSize="25sp"
        android:background="@drawable/layoutline"
        android:hint="Enter Your First Name"
        android:layout_marginTop="100sp"
        />
    <EditText
        android:id="@+id/edt2"
        android:background="@drawable/layoutline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@+id/edt1"
        android:hint="Enter Your Last Name"
        />
    <RadioGroup
        android:id="@+id/rb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt2">
        <RadioButton
            android:id="@+id/rd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textStyle="bold"
            android:layout_below="@+id/edt2"
            />
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textStyle="bold"
            android:layout_below="@+id/rd2"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your Hobbies: "
        android:layout_below="@+id/rb2"
        android:textSize="20sp"
        android:textColor="#F4511E"
        android:textCursorDrawable="@color/white"
        />

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx1"
        android:text="Cricket"
        android:layout_marginRight="20sp"
        android:layout_alignEnd="@id/tx1"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/chk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx1"
        android:layout_centerInParent="true"
        android:text="Chess"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/chk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx1"
        android:text="Kabbadi"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:layout_below="@+id/chk3"
        android:textSize="25sp"
        android:background="@drawable/layoutline"
        />

    <Spinner
        android:layout_marginTop="20sp"
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt3"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_centerInParent="true"
        android:layout_marginTop="100sp"
        android:layout_below="@id/sp1"
        />

</RelativeLayout>