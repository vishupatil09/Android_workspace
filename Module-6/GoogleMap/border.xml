<!-- curved_border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#FDF4D780" />
            <!-- Curved corners -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Border shape -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Border color -->
            <stroke android:width="2dp" android:color="#FF5722" />
            <!-- Curved corners -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
